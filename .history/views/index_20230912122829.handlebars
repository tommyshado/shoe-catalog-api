  <body>
    <script id="shoeListTemplate" type="text/x-handlebars-template">
      <ul>
        {{#each shoeList}}
          <li>
            <img src="{{image_url}}" alt="{{brand}} - {{color}}" />
            {{brand}}
            -
            {{color}}
            - Size:
            {{size}}
          </li>
        {{/each}}
      </ul>
    </script>

    <header>
      <div>
        <input
          class="search_bar"
          type="text"
          placeholder="ðŸ”Search for shoes"
        />
      </div>

      <div>
        <img src="../images/logo.png" class="logo_img" alt="" />
      </div>

      <div class="login_container">
        <div class="auth_container">
          {{#if username}}
            <span>Welcome, {{username}}</span>
            <button id="logoutButton">Logout</button>
          {{else}}
            <button id="loginButton">Login</button>
            <button id="signupButton">Signup</button>
          {{/if}}
        </div>

        <div class="cart_container">
          <img src="../images/shopping-cart.png" class="cart_img" alt="" />
          <p>Cart</p>
        </div>
      </div>
    </header>

    <div class="shoes"></div>

    <!-- Add your client-side JavaScript file here -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script src="client.js" type="module"></script>
  </body>